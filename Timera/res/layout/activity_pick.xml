<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pick_background" >

    <Button
        android:id="@+id/pick_gallery"
        style="@style/PickButtonGallery"
        android:layout_width="72dp"
        android:layout_height="84dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="72dp"
        android:layout_marginTop="72dp" />

    <Button
        android:id="@+id/pick_camera"
        style="@style/PickButtonCamera"
        android:layout_width="72dp"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="72dp" />

    <Button
        android:id="@+id/pick_flickr"
        style="@style/PickButtonFlickr"
        android:layout_width="72dp"
        android:layout_height="84dp"
        android:layout_alignLeft="@+id/pick_gallery"
        android:layout_below="@+id/pick_gallery"
        android:layout_marginTop="42dp" />

    <Button
        android:id="@+id/pick_nearby"
        style="@style/PickButtonNearby"
        android:layout_width="72dp"
        android:layout_height="84dp"
        android:layout_alignLeft="@+id/pick_camera"
        android:layout_below="@+id/pick_camera"
        android:layout_marginTop="42dp" />

</RelativeLayout>